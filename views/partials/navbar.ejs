<!-- Navigation Bar/Header -->
<header>
    <nav class="header">
        <div class="logo">
            <a href="/" id="logo-link">
                <img src="/images/logo.png" alt="HOME">
            </a>
        </div>
        <ul>
            <li><a class="link link--nav" href="/mealkits/on-the-menu">On the Menu</a></li>
            <% if (typeof user === "undefined") { %>
                <li><a class="link link--nav" href="/sign-up">Sign Up</a></li>
                <li><a class="link link--nav" href="/log-in">Log In</a></li>
            <% } else { %>
                <% if(role === "clerk") { %>
                    <li><a class="link link--nav" href="/mealkits/list"><%= user.firstName %></a></li>
                <% } else if (role === "customer") { %>
                    <li><a class="link link--nav" href="/cart"><%= user.firstName %></a></li>
                <% } %>
                <li><a class="link link--nav" href="/logout">Log Out</a></li>
            <% } %>
            <li><a class="link link--nav" href="/cart">Cart</a></li>
            <li><a class="link link--nav" href="/mealkits/list">List</a></li>
        </ul>
    </nav>
</header>