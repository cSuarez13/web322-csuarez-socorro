<h3 style="color: rgb(0, 255, 13);">Welcome, <%= user.firstName %>.</h3>

<button class="button-62" role="button">
   <p><a href="../load-data/mealkits">Load Meal Kits</a></p>
</button>

<!-- Meal Kits List -->
    <!-- Horizontal Line -->
    <hr class="fade" />
    <h1 class="text-6xl">Meal Kits</h1>
    <!-- Horizontal Line -->
    <hr class="fade" />

<!-- component -->
<div class="overflow-hidden rounded-lg border border-green-200 shadow-md m-12">
   <table class="w-full border-collapse bg-gradient-to-br from-gray-800 to-amber-400 bg-opacity-50 text-left text-2xl text-lime-300">
     <thead class="bg-gradient-to-br from-lime-500 to-gray-800">
       <tr>
         <th scope="col" class="px-6 py-4 text-3xl text-amber-400"></th>
         <th scope="col" class="px-6 py-4 text-3xl text-amber-400">Title</th>
         <th scope="col" class="px-6 py-4 text-3xl text-amber-400">Includes</th>
         <th scope="col" class="px-6 py-4 text-3xl text-amber-400">Description</th>
         <th scope="col" class="px-6 py-4 text-3xl text-amber-400">Category</th>
         <th scope="col" class="px-6 py-4 text-3xl text-amber-400">Price</th>
         <th scope="col" class="px-6 py-4 text-3xl text-amber-400">Cooking Time</th>
         <th scope="col" class="px-6 py-4 text-3xl text-amber-400">Servings</th>
         <th scope="col" class="px-6 py-4 text-3xl text-amber-400">Featured</th>
         <th scope="col" class="px-6 py-4 text-3xl text-amber-400"></th>
       </tr>
     </thead>
     <tbody class="divide-y divide-green-200 border-t border-green-200">
      <% if (meals.length === 0) { %>
         <td></td><td></td><td></td><td></td><td></td>
         <td>Not available data.</td>
     <% } %>
       <% meals.forEach(function(meal) { %>
         <tr class="hover:bg-green-200 hover:text-gray-950">
            <td class="px-6 py-4">
               <img src="<%= meal.imageUrl %>" alt="<%= meal.title %>" class="h-15 w-15 rounded-full object-cover object-center">
             </td>
           <td class="px-6 py-4"><%= meal.title %></td>
           <td class="px-6 py-4"><%= meal.includes %></td>
           <td class="px-6 py-4"><%= meal.description %></td>
           <td class="px-6 py-4"><%= meal.category %></td>
           <td class="px-6 py-4"><%= meal.price %></td>
           <td class="px-6 py-4"><%= meal.cookingTime %></td>
           <td class="px-6 py-4"><%= meal.servings %></td>
           <td class="px-6 py-4"><%= meal.featuredMealKit ? 'Yes' : 'No' %></td>
           <td class="px-6 py-4">
            <div class="flex justify-end gap-4">
              <a x-data="{ tooltip: 'Delete' }" href="#">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="h-10 w-10 text-red-900"
                  x-tooltip="tooltip"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
                  />
                </svg>
              </a>
              <a x-data="{ tooltip: 'Edite' }" href="#">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="h-10 w-10 text-green-400"
                  x-tooltip="tooltip"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125"
                  />
                </svg>
              </a>
            </div>
          </td>
         </tr>
       <% }); %>
     </tbody>
   </table>
 </div>
 
